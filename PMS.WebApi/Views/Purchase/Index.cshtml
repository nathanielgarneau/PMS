@using GridMvc.Html
@model System.Collections.Generic.IEnumerable<PMS.Xam.ViewModel.PurchaseViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>@ViewBag.Title</h2>
<div class="form-horizontal">
    <h4>Purchase</h4>
    <hr />
    <p>
        @Html.ActionLink("Create New", "Create", new { })
    </p>
    @(Html.Grid(Model).Columns(columns =>
{
    columns.Add(x => x.Id);
    columns.Add(x => x.Client);
    
    columns.Add(x => x.Items);
    columns.Add(x => x.StorageLocations);
    columns.Add(x => x.PurchaseCost);
    columns.Add(x => x.Payments);
    columns.Add(x => x.EstimatedValueHigh);
    columns.Add(x => x.EstimatedValueLow);
    columns.Add(x => x.SaleableDate);
    columns.Add(x => x.Notes);
    columns.Add().Encoded(false).Sanitized(false).SetWidth(20)
  .RenderValueAs(x => @Html.ActionLink("Details", "Details", new { id = x.Id }));
    columns.Add().Encoded(false).Sanitized(false).SetWidth(20)
      .RenderValueAs(x => @Html.ActionLink("Edit", "Edit", new { id = x.Id }));
    columns.Add().Encoded(false).Sanitized(false).SetWidth(20)
      .RenderValueAs(x => @Html.ActionLink("Delete", "Delete", new { id = x.Id }));
})
    .WithPaging(10)
    .WithMultipleFilters()
    .Filterable(true)
    .Sortable(true)
    .Selectable(false)
    )
</div>