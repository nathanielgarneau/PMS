@using GridMvc.Html
@model System.Collections.Generic.IEnumerable<PMS.Xam.ViewModel.ClientViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>@ViewBag.Title</h2>
<div class="form-horizontal">
    <h4>Client</h4>
    <hr />
    <p>
        @Html.ActionLink("Create New", "Create", new { })
    </p>
    @(Html.Grid(Model).Columns(columns =>
{
    columns.Add(x => x.Id);
    columns.Add(x => x.FirstName);
    columns.Add(x => x.LastName);
    columns.Add(x => x.IdentificationType);
    columns.Add(x => x.IdentificationNumber);
    columns.Add(x => x.OtherIdentificationType);
    columns.Add(x => x.OtherIdentificationNumber);
    columns.Add(x => x.Address);


    columns.Add().Encoded(false).Sanitized(false).SetWidth(20)
      .RenderValueAs(x => @Html.ActionLink("Details", "Details", new { id = x.Id }));
    columns.Add().Encoded(false).Sanitized(false).SetWidth(20)
      .RenderValueAs(x => @Html.ActionLink("Edit", "Edit", new { id = x.Id }));
    columns.Add().Encoded(false).Sanitized(false).SetWidth(20)
      .RenderValueAs(x => @Html.ActionLink("Delete", "Delete", new { id = x.Id }));
})
    .WithPaging(10)
    .WithMultipleFilters()
    .Filterable(true)
    .Sortable(true)
    .Selectable(false)
    )
</div>