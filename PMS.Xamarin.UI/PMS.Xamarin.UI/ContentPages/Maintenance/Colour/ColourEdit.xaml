<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PMS.Xam.UI.ContentPages.Maintenance.Colour.ColourEdit">
  <Label Text="{Binding MainText}" VerticalOptions="Center" HorizontalOptions="Center" />
  <StackLayout x:Name="EditView"
               VerticalOptions="FillAndExpand"
                 HorizontalOptions="FillAndExpand"
                 Orientation="Vertical"
                 Spacing="15"
               >
    <Label Text="Id"></Label>
    <Label Text="{Binding Id}"></Label>
    <Label Text="Name"></Label>
    <Entry Text="{Binding Name}"></Entry>
    <Label Text="Code"></Label> 
    <BoxView x:Name="BoxView" WidthRequest="150" HeightRequest="150" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"></BoxView>
    <Picker x:Name="Picker"></Picker>
  </StackLayout>
</ContentPage>